<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e6fcf9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/arrow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/feedback" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/feeemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawableStart="@drawable/email"
            android:hint="Enter Your Email..."
            android:inputType="textEmailAddress"
            android:padding="20sp"
            android:textColor="#eb6cdc"
            android:textColorHint="#676a6e"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_below="@id/ll2"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/feesubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawableStart="@drawable/sub"
            android:hint="Enter Subject..."
            android:inputType="textCapCharacters"
            android:padding="20sp"
            android:textColor="#eb6cdc"
            android:textColorHint="#676a6e"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll4"
        android:layout_below="@id/ll3"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/feedes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawableStart="@drawable/desc"
            android:hint="Enter Your Valuable Opinion..."
            android:inputType="textMultiLine|textCapCharacters"
            android:lines="5"
            android:textColor="#eb6cdc"
            android:padding="20sp"
            android:textColorHint="#676a6e"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll5"
        android:layout_below="@id/ll4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
    <Button
        android:id="@+id/feesubmitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" SUBMIT "
        android:gravity="center"
        android:textSize="24sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>