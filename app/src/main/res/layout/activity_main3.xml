<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e6fcf9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">



    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/arrow"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/man" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@id/ll1"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lll"
                android:layout_below="@id/ll"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_below="@id/lll"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:drawableStart="@drawable/email"
        android:hint="Enter Your Email..."
        android:inputType="textEmailAddress"
        android:textColor="#eb6cdc"
        android:padding="20sp"
        android:textColorHint="#676a6e"
        android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_below="@id/ll2"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:inputType="textCapCharacters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawableStart="@drawable/user"
            android:hint="Enter Username..."
            android:textColor="#eb6cdc"
            android:padding="20sp"
            android:textColorHint="#676a6e"
            android:textSize="20sp" />
    </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_below="@id/ll3"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/phoneno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:drawableStart="@drawable/phone"
                        android:hint="Enter Phone No..."
                        android:inputType="text"
                        android:textColor="#eb6cdc"
                        android:padding="20sp"
                        android:textColorHint="#676a6e"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_below="@id/ll4"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:drawableStart="@drawable/plaec"
                        android:hint="Enter Place..."
                        android:inputType="textCapCharacters"
                        android:textColor="#eb6cdc"
                        android:padding="20sp"
                        android:textColorHint="#676a6e"
                        android:textSize="20sp" />
                </LinearLayout>
    <LinearLayout
        android:id="@+id/ll6"
        android:layout_below="@id/ll5"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawableStart="@drawable/password"
            android:hint="Enter Password...Min 8 Characters"
            android:inputType="textPassword"
            android:textColor="#eb6cdc"
            android:padding="20sp"
            android:textColorHint="#676a6e"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll7"
        android:layout_below="@id/ll6"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/cpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawableStart="@drawable/password"
            android:hint="Confirm Password..."
            android:inputType="textPassword"
            android:textColor="#eb6cdc"
            android:padding="20sp"
            android:textColorHint="#676a6e"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll8"
        android:layout_below="@id/ll7"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/signbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" SIGN IN "
            android:gravity="center"
            android:textSize="24sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll9"
        android:layout_below="@id/ll8"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/alreadyuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have an Account??? , SIGN IN   "
            android:textSize="24sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="italic"
            android:textColor="#000000"
            android:clickable="true"
            android:layout_gravity="center"/>

    </LinearLayout>
            </LinearLayout>
</ScrollView>
    </LinearLayout>
</RelativeLayout>