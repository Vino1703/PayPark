<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6fcf9"
    tools:context=".MainActivity12">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10sp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/pinc" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:drawableStart="@drawable/pincode"
            android:hint="Enter Your PINCODE..."
            android:inputType="number"
            android:padding="20sp"
            android:textColor="#eb6cdc"
            android:textColorHint="#676a6e"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_below="@id/ll2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/pincodesrch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" SUBMIT "
            android:gravity="center"
            android:textSize="24sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="italic"
            android:textColor="#000000"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>